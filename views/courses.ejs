<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% if (courses && courses.length > 0) { %>
                        <% courses.forEach(course => { %>
                            <tr>
                                <td><%= course.courseId %></td>
                                <td><a href="/course/<%= course.courseId %>"><%= course.courseCode %></a></td>
                                <td><a href="/students?course=<%= course.courseId %>"><%= course.courseDescription %></a></td>
                                <td>
                                    <a href="/course/delete/<%= course.courseId %>" class="btn btn-danger">Remove</a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center"><strong><%= message %></strong></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
