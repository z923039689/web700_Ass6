<div class="row">
    <main class="col-md-12">
        <br>
        <h2><%= viewData.student.firstName %> <%= viewData.student.lastName %> - Student: <%= viewData.student.studentNum %></h2>
        <hr />
        <form method="POST" action="/student/update">
            <input type="hidden" name="studentNum" value="<%= viewData.student.studentNum %>" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="<%= viewData.student.firstName %>" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="<%= viewData.student.lastName %>" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" value="<%= viewData.student.email %>" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text" value="<%= viewData.student.addressStreet %>" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" name="addressCity" type="text" value="<%= viewData.student.addressCity %>" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" name="addressProvince" type="text" value="<%= viewData.student.addressProvince %>" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Academic Information</legend>
                <div class="form-group">
                    <label>TA:</label>
                    <input type="checkbox" name="TA" <%= viewData.student.TA ? "checked" : "" %> />
                </div>
                <div class="form-group">
                    <label>Status:</label>
                    <label>
                        <input type="radio" name="status" value="Full Time" <%= viewData.student.status === "Full Time" ? "checked" : "" %>> Full Time
                    </label>
                    <label>
                        <input type="radio" name="status" value="Part Time" <%= viewData.student.status === "Part Time" ? "checked" : "" %>> Part Time
                    </label>
                </div>
                <div class="form-group">
                    <label>Course:</label>
                    <% if (viewData.courses && viewData.courses.length > 0) { %>
                    <select class="form-control" name="course" id="course">
                        <option value="">Select Course</option>
                        <% viewData.courses.forEach(course => { %>
                            <option value="<%= course.courseId %>" <%= course.selected ? "selected" : "" %>><%= course.courseCode %></option>
                        <% }); %>
                    </select>
                    <% } else { %>
                    <div>No Courses</div>
                    <% } %>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Student" />
        </form>
    </main>
</div>
